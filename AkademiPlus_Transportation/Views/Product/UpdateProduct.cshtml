@model AkademiPlus_Transportation.Models.TblProduct
@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Ürün Güncelleme</h2>
<form method="post">
    <label>@Html.HiddenFor(x=>x.ProductID)</label>
    <label>Ürün Adı</label>
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    <br />
    <label>Ürün Boyutu</label>
    @Html.TextBoxFor(x => x.ProductSize, new { @class = "form-control" })
    <br />
    <label>Ürün Türü</label>
    @Html.TextBoxFor(x => x.ProductSizeType, new { @class = "form-control" })
    <br />
    <label>Ürün Açıklaması</label>
    @Html.TextAreaFor(x => x.ProductDescription, 5, 1, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Ürün Güncelle</button>
</form>


